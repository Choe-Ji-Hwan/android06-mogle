<resources>

    <style name="Theme.Mogle.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mint</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/pink</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="hamburgerColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Mogle" parent="Theme.Mogle.Base">
        <!-- Bottom Sheet -->
        <item name="colorSurface">@color/white</item>

        <!-- Moment Preview -->
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorSurfaceInverse">@color/black</item>

        <item name="colorOnSurface">@color/light_gray</item>
        <item name="colorOnSurfaceInverse">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/light_gray</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionOverflowMenuStyle">@style/Mogle.PopUpOverFlowMenu</item>
    </style>

    <style name="Theme.Mogle.Cloudy" parent="Theme.Mogle.Base">
        <item name="colorSurface">@color/cloudy_dark_gray</item>
        <item name="colorSurfaceVariant">@color/cloudy_gray</item>
        <item name="colorSurfaceInverse">@color/white</item>

        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceInverse">@color/cloudy_gray</item>

        <item name="android:colorBackground">@color/cloudy_dark_gray</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/cloudy_light_gray</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionOverflowMenuStyle">@style/Mogle.PopUpOverFlowMenu</item>
    </style>

    <style name="Theme.Mogle.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_mogle_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Mogle</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>